<h1>People</h1>

<p>Showing <%= @people.count %> people</p>

<p><a class="btn btn-primary" href="/frequency">See Character Frequency</a></p>
<p><a class="btn btn-primary" href="/duplicates">Show Matching Duplicates</a></p>

<table class="table">
  <thead>
    <th>Name</th>
    <th>Email</th>
    <th>Job Title</th>
  </thead>
  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person["display_name"] %></td>
        <td><%= person["email_address"] %></td>
        <td><%= person["title"] %></td>
      </tr>
    <% end %>
  </tbody>
</table>